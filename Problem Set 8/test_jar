from jar import Jar

def test_init():
    jar = Jar(10)
    assert jar.capacity == 10
    assert jar.size == 0

    jar = Jar()
    assert jar.capacity == 12
    assert jar.size == 0

def test_str():
    jar = Jar()
    assert str(jar) == ""
    jar.deposit(1)
    assert str(jar) == "ğŸª"
    jar.deposit(11)
    assert str(jar) == "ğŸªğŸªğŸªğŸªğŸªğŸªğŸªğŸªğŸªğŸªğŸªğŸª"

def test_deposit():
    jar = Jar(10)
    jar.deposit(3)
    assert jar.size == 3
    assert str(jar) == "ğŸªğŸªğŸª"

    jar.deposit(7)
    assert jar.size == 10
    assert str(jar) == "ğŸªğŸªğŸªğŸªğŸªğŸªğŸªğŸªğŸªğŸª"

    try:
        jar.deposit(1)
    except ValueError as e:
        assert str(e) == "Not enough capacity in the jar"

def test_withdraw():
    jar = Jar(10)
    jar.deposit(10)
    jar.withdraw(5)
    assert jar.size == 5
    assert str(jar) == "ğŸªğŸªğŸªğŸªğŸª"

    jar.withdraw(5)
    assert jar.size == 0
    assert str(jar) == ""

    try:
        jar.withdraw(1)
    except ValueError as e:
        assert str(e) == "Not enough cookies in the jar"
