question = input("Expression: ")

if '+' in question:
    numbers = question.split('+')
    result = float(numbers[0]) + float(numbers[1])
    print(result)
elif '-' in question:
    numbers = question.split('-')
    result = float(numbers[0]) - float(numbers[1])
    print(result)
elif '*' in question:
    numbers = question.split('*')
    result = float(numbers[0]) * float(numbers[1])
    print(result)
elif '/' in question:
    numbers = question.split('/')
    result = float(numbers[0]) / float(numbers[1])
    print(result)
else:
    print("invalid operation")
